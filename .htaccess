<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Remove barras duplas da URL primeiro (redirecionamento permanente)
  RewriteCond %{REQUEST_URI} ^(.*)//+(.*)$
  RewriteRule ^(.*)$ %1/%2 [R=301,L]
  
  # NÃO reescrever se for um arquivo físico existente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # NÃO reescrever arquivos estáticos (assets)
  RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|xml|txt|pdf|zip|webp|webm|mp4)$ [NC]
  RewriteRule ^ - [L]
  
  # NÃO reescrever diretórios especiais
  RewriteCond %{REQUEST_URI} ^/(api|assets|images|fonts|_next|static)/ [NC]
  RewriteRule ^ - [L]
  
  # NÃO reescrever se já for index.html
  RewriteCond %{REQUEST_URI} ^/index\.html$ [NC]
  RewriteRule ^ - [L]
  
  # Redirecionar TUDO para index.html (React Router SPA)
  # Esta é a regra mais importante - permite que todas as rotas sejam servidas pelo React
  RewriteRule ^ index.html [L]
</IfModule>

# Força o index.html como página padrão
DirectoryIndex index.html

# Prevenir listagem de diretórios
Options -Indexes +FollowSymLinks

# Segurança: não permitir acesso a arquivos ocultos (exceto .well-known)
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# Permitir acesso ao .well-known (para certificados SSL, etc)
<FilesMatch "^\.well-known">
  Order allow,deny
  Allow from all
</FilesMatch>

# Headers de segurança e cache
<IfModule mod_headers.c>
  # Headers de segurança
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  
  # Cache para assets estáticos
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Sem cache para index.html (para sempre ter a versão mais recente)
  <FilesMatch "index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>

# Configurações de cache para assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/eot "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Tipo MIME para arquivos JavaScript (alguns servidores podem não reconhecer)
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType text/css css
</IfModule>

